<img src="{{imageUrl}}" height="100px"alt="">
<h2>{{title}}</h2>
<div>
  {{content}}
  <br>
  - by {{userId.username}} ♥️
</div>

{{#unless comments}}
  <p>No comments yet!</p>
{{/unless}}
 
{{#each comments}}
  <p><b>{{this.userId.username}}:</b> {{this.content}}</p>
{{/each}}
 
<hr>
 
<h3>Add comment</h3>
 
<form action="/posts/{{this._id}}/comment" method="POST">
 <label> Your username:
    <input type="text" name="author" />
  </label>
  
  <input type="text" name="postAuthor" value="{{post.username}}" hidden />
  <textarea name="content" cols="30" rows="2">content</textarea>
 
  <button type="submit">Comment</button>
</form>
 
<br>
<a href="/users/{{this._id}}/posts">See all {{post.username}}'s posts </a>

</body>